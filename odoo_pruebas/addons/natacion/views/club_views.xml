<odoo>
  <data>
    <!-- List view -->
    <record id="view_club_list" model="ir.ui.view">
      <field name="name">clubs list</field>
      <field name="model">natacion.club</field>
      <field name="arch" type="xml">
        <list string="Clubs">
          <field name="name" />
          <field name="image" />
          <field name="town" />
          <field name="championships" widget="many2many_tags" />
          <field name="swimmers_list" widget="one2many_tags" />
        </list>
      </field>
    </record>

        <!-- Kanban view -->
    <record id="view_club_kanban" model="ir.ui.view">
      <field name="name">clubs kanban</field>
      <field name="model">natacion.club</field>
      <field name="arch" type="xml">
        <kanban>
          <field name="name" />
          <field name="image" />
          <field name="town" />

          <templates>
            <t t-name="kanban-box">
              <div style="display:flex; align-items:center; padding:8px;">
                <div>
                  <img t-att-src="kanban_image('natacion.club', 'image', record.id.value)"
                    t-att-alt="record.name.value"
                    style="width:64px; height:64px; margin-right:8px; border-radius:4px; object-fit:cover;" />
                </div>
                <div>
                  <strong>
                    <field name="name" />
                  </strong>
                  <br />
                  <span>
                    <field name="town" />
                  </span>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <!-- Form view -->
    <record id="view_club_form" model="ir.ui.view">
      <field name="name">clubs form</field>
      <field name="model">natacion.club</field>
      <field name="arch" type="xml">
        <form string="Club">
          <sheet>
            <group>
              <field name="name" />
              <field name="image" widget="image" />
              <field name="town" />
              <field name="championships" widget="many2many_tags" />
              <field name="swimmers_list" widget="one2many_tags" />
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="natacion.action_clubs_window">
      <field name="name">natacion Club window</field>
      <field name="res_model">natacion.club</field>
      <field name="view_mode">kanban,list,form</field>
    </record>

    <menuitem name="Clubs" id="natacion.menu_clubs" parent="natacion.menu_management"
      action="natacion.action_clubs_window" />

  </data>
</odoo>