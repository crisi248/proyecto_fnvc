<odoo>
  <data>
    <!-- List view -->
    <record id="view_club_list" model="ir.ui.view">
      <field name="name">clubs list</field>
      <field name="model">natacion.club</field>
      <field name="arch" type="xml">
        <list string="Clubs">
          <!-- Aplicar color condicional utilizando t-att-style -->
          <field name="name" 
                 t-att-style="color: #{'FFD700' if ranking == 1 else 'C0C0C0' if ranking == 2 else 'cd7f32' if ranking == 3 else '808080'};"
                 string="Club"/>
          <field name="town" />
          <field name="points" />
          <field name="championships" widget="many2many_tags" />
          <field name="swimmers_list" widget="one2many_tags" />
          <field name="medal_emoji" />
        </list>
      </field>
    </record>

    <!-- Kanban view -->
    <record id="view_club_kanban" model="ir.ui.view">
      <field name="name">clubs kanban</field>
      <field name="model">natacion.club</field>
      <field name="arch" type="xml">
        <kanban>
          <field name="name" />
          <field name="image" />
          <field name="town" />
          <field name="points" />
          <field name="championships" widget="many2many_tags" />
          <field name="swimmers_list" widget="one2many_tags" />
          <field name="medal_emoji" />
          <field name="ribbon_color" />

          <templates>
            <t t-name="kanban-box">
              <div t-attf-class="o_kanban_card o_kanban_record">
                <div
                  t-attf-style="background-color: #{record.ribbon_color.value}; border-radius: 4px; padding: 8px;">
                  <div style="display:flex; align-items:center; padding:8px;">
                    <div>
                      <img t-att-src="kanban_image('natacion.club', 'image', record.id.value)"
                        t-att-alt="record.name.value"
                        style="width:64px; height:64px; margin-right:8px; border-radius:4px; object-fit:cover;" />
                    </div>
                    <div>
                      <strong>
                        <field name="name" />
                      </strong>
                      <br />
                      <span>
                        <field name="town" />
                      </span>
                      <span t-esc="record.medal_emoji.value" style="font-size:24px;"></span>
                    </div>
                  </div>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>


    <!-- Form view -->
    <record id="view_club_form" model="ir.ui.view">
      <field name="name">clubs form</field>
      <field name="model">natacion.club</field>
      <field name="arch" type="xml">
        <form string="Club">
          <sheet>
            <group>
              <field name="name" />
              <field name="image" widget="image" />
              <field name="town" />
              <field name="championships" widget="many2many_tags" />
              <field name="points" />
              <field name="swimmers_list" widget="one2many_tags" />
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="natacion.action_clubs_window">
      <field name="name">natacion Club window</field>
      <field name="res_model">natacion.club</field>
      <field name="view_mode">kanban,list,form</field>
    </record>

    <menuitem name="Clubs" id="natacion.menu_clubs" parent="natacion.menu_management"
      action="natacion.action_clubs_window" />

  </data>
</odoo>