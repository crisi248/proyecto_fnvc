<odoo>
  <data>

    <!-- List view -->
    <record id="view_session_list" model="ir.ui.view">
      <field name="name">sessions list</field>
      <field name="model">natacion.session</field>
      <field name="arch" type="xml">
        <list string="Sessions">
          <field name="name" />
          <field name="date" />
          <field name="championship_id" />
        </list>
      </field>
    </record>

    <!-- Form view -->
    <record id="view_session_form" model="ir.ui.view">
      <field name="name">sessions form</field>
      <field name="model">natacion.session</field>
      <field name="arch" type="xml">
        <form string="Session">
          <sheet>
            <group>
              <header>
                <button name="action_print_session_results_pdf"
                  type="object"
                  string="Imprimir Resultados PDF"
                  class="btn-primary" />

                <button
                  name="action_print_tickets"
                  type="object"
                  string="Generar Entradas (PDF)"
                  class="btn-primary"
                  icon="fa-ticket" />

              </header>
              <field name="name" />
              <field name="date" />
              <field name="sessionTime" />
              <field name="championship_id" />
            </group>
            <notebook>
              <page string="Tests">
                <field name="tests">
                  <list>
                    <field name="name" />
                    <field name="description" />
                  </list>
                </field>
              </page>
              <page string="Swimmers">
                <field name="swimmers" widget="many2many_tags" />
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Calendar view -->
    <record id="view_session_calendar" model="ir.ui.view">
      <field name="name">natacion.session.calendar</field>
      <field name="model">natacion.session</field>
      <field name="arch" type="xml">
        <calendar string="Sesiones de Natación" date_start="date" color="championship_id">
          <field name="name" />
          <field name="championship_id" />
        </calendar>
      </field>
    </record>

    <!-- Action window -->
    <record model="ir.actions.act_window" id="natacion.action_sessions_window">
      <field name="name">Sesiones de Natación</field>
      <field name="res_model">natacion.session</field>
      <field name="view_mode">calendar,list,form</field>
    </record>


    <!-- Menu item -->
    <menuitem name="Sessions" id="natacion.menu_sessions" parent="natacion.menu_management"
      action="natacion.action_sessions_window" />

  </data>
</odoo>