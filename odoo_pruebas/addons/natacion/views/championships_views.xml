<odoo>
  <data>

    <!-- ===================== -->
    <!-- WIZARD 1: CREAR CAMPEONATO -->
    <!-- ===================== -->

    <!-- Acción del wizard 1 -->
    <record id="action_create_championship_wizard" model="ir.actions.act_window">
      <field name="name">Crear Campeonato</field>
      <field name="res_model">natacion.create.championship.wizard</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
    </record>

    <!-- Vista del wizard 1 -->
    <record id="view_create_championship_wizard_form" model="ir.ui.view">
      <field name="name">create.championship.wizard.form</field>
      <field name="model">natacion.create.championship.wizard</field>
      <field name="arch" type="xml">
        <form string="Crear Campeonato">
          <group>
            <field name="name" />
            <field name="start_date" />
            <field name="end_date"/>
          </group>
          <footer>
            <button string="Siguiente" type="object" name="action_next" class="btn-primary" />
            <button string="Cancelar" special="cancel" />
          </footer>
        </form>
      </field>
    </record>

    <!-- ===================== -->
    <!-- WIZARD 2: CONFIGURAR SESIONES, TESTS Y SETS -->
    <!-- ===================== -->

    <!-- Acción del wizard 2 -->
    <record id="action_create_championship_details_wizard" model="ir.actions.act_window">
      <field name="name">Configurar Sesiones y Tests</field>
      <field name="res_model">natacion.create.championship.details.wizard</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
    </record>

    <!-- Vista del wizard 2 -->
    <record id="view_create_championship_details_wizard_form" model="ir.ui.view">
      <field name="name">create.championship.details.wizard.form</field>
      <field name="model">natacion.create.championship.details.wizard</field>
      <field name="arch" type="xml">
        <form string="Configurar Sesiones, Tests y Sets">
          <group>
            <field name="name" readonly="1" />
            <field name="start_date" readonly="1" />
            <field name="end_date" readonly="1" />
            <field name="number_of_sessions" />
            <field name="club_ids" widget="many2many_tags"/>
          </group>
          <footer>
            <button string="Crear Campeonato" type="object" name="action_create_championship"
              class="btn-primary" />
            <button string="Cancelar" special="cancel" />
          </footer>
        </form>
      </field>
    </record>

    <!-- ===================== -->
    <!-- WIZARD 1 ACTION -->
    <!-- ===================== -->
    <record id="action_register_swimmer_wizard" model="ir.actions.act_window">
      <field name="name">Inscribir Nadador</field>
      <field name="res_model">natacion.register.swimmer.wizard</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
    </record>

    <!-- ===================== -->
    <!-- WIZARD 1 VIEW -->
    <!-- ===================== -->
    <record id="view_register_swimmer_wizard_form" model="ir.ui.view">
      <field name="name">register.swimmer.wizard.form</field>
      <field name="model">natacion.register.swimmer.wizard</field>
      <field name="arch" type="xml">
        <form string="Inscribir Nadador">
          <group>
            <field name="swimmer_id" />
          </group>
          <footer>
            <button string="Confirmar" type="object" name="action_confirm" class="btn-primary" />
            <button string="Cancelar" special="cancel" />
          </footer>
        </form>
      </field>
    </record>

    <!-- ===================== -->
    <!-- WIZARD 2 ACTION -->
    <!-- ===================== -->
    <record id="action_confirm_swimmer_details_wizard" model="ir.actions.act_window">
      <field name="name">Detalles del Nadador</field>
      <field name="res_model">natacion.confirm.swimmer.details.wizard</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
    </record>

    <!-- ===================== -->
    <!-- WIZARD 2 VIEW -->
    <!-- ===================== -->
    <record id="view_confirm_swimmer_details_wizard_form" model="ir.ui.view">
      <field name="name">confirm.swimmer.details.wizard.form</field>
      <field name="model">natacion.confirm.swimmer.details.wizard</field>
      <field name="arch" type="xml">
        <form string="Detalles del Nadador">
          <group>
            <field name="swimmer_id" readonly="1" />
            <field name="category_id" />
            <field name="bestStyle_id" />
          </group>
          <footer>
            <button string="Confirmar" type="object" name="action_confirm" class="btn-primary" />
            <button string="Cancelar" special="cancel" />
          </footer>
        </form>
      </field>
    </record>

    <!-- ===================== -->
    <!-- CHAMPIONSHIP LIST -->
    <!-- ===================== -->
    <record id="view_championship_list" model="ir.ui.view">
      <field name="name">championships list</field>
      <field name="model">natacion.championship</field>
      <field name="arch" type="xml">
        <list string="Championships">
          <header>
            <button name="%(natacion.action_create_championship_wizard)d"
              type="action"
              string="Crear Campeonato"
              class="btn-primary"
              display="always" />
          </header>
          <field name="name" />
          <field name="start_date" />
          <field name="end_date" />
          <field name="clubs" widget="many2many_tags" />
          <field name="swimmers" widget="many2many_tags" />
        </list>
      </field>
    </record>

    <!-- ===================== -->
    <!-- CHAMPIONSHIP FORM -->
    <!-- ===================== -->
    <record id="view_championship_form" model="ir.ui.view">
      <field name="name">championships form</field>
      <field name="model">natacion.championship</field>
      <field name="arch" type="xml">
        <form string="Championship">
          <sheet>
            <header>
              <button name="%(natacion.action_register_swimmer_wizard)d"
                type="action"
                string="Inscribir Nadador"
                class="btn-primary"
                context="{'default_championship_id': id}" />


              <button name="action_random_setup"
                type="object"
                string="PUPULATE"
                class="btn-primary"
                display="always" />

              <button name="action_assign_swimmers_to_tests"
                type="object"
                string="Asignar Nadadores a Tests"
                class="btn-primary"
                display="always" />

              <button name="action_assign_random_times"
                string="Asignar Resultados"
                type="object"
                class="btn-primary" />

            </header>
            <group>
              <field name="name" />
              <field name="start_date" />
              <field name="end_date" />
              <field name="clubs" widget="many2many_tags" />
              <field name="swimmers" widget="many2many_tags" readonly="1" />
            </group>
            <notebook>
              <page string="Sessions">
                <field name="sessions">
                  <list>
                    <field name="name" />
                    <field name="date" />
                    <field name="sessionTime" />
                  </list>
                </field>
              </page>
              <page string="Resultados">
                <field name="results_html"/>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <!-- ===================== -->
    <!-- ACTION + MENU -->
    <!-- ===================== -->
    <record model="ir.actions.act_window" id="natacion.action_championships_window">
      <field name="name">Championships</field>
      <field name="res_model">natacion.championship</field>
      <field name="view_mode">list,form</field>
    </record>

    <menuitem name="Championships"
      id="natacion.menu_championships"
      parent="natacion.menu_management"
      action="natacion.action_championships_window" />

  </data>
</odoo>